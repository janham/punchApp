<% provide(:title, 'Time table') %>

<%= link_to "戻る", punch_path %>
<table>
  <tr>
    <th>お名前</th>
    <th>出社</th>
    <th>退社</th>
    <th></th>
  </tr>
  <tr>
    <% @punches.each do |punch| %>
      <td>
        <%= gravatar_for @user, size: 50 %>
        <%= link_to @user.name, @user_path %>
      </td>
      <td>
        <%= @punch.punch_at_in %>
      </td>
      <td>
        <% if @punch.punch_at_out %>
          <%= @punch.punch_at_out %>
        <% end %>
      </td>
      <td>
        <%= link_to "変更", edit_punch_path %>
      </td>
    <% end %>
  </tr>
</table>