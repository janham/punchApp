<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>投稿一覧</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<%= full_title(yield(:title)) %>
<h1>maQe App</h1>
<p>welcome!</p>

<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
<% end %>