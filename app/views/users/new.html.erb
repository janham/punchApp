<% provide(title: "Signup") %>
<h1>Sign up</h1>

<div>
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
    
        <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.label :email %>
        <%= f.text_field :email %>
        
        <%= f.label :password %>
        <%= f.password_field :password %>
        
        <%= f.label :パスワードの確認 %>
        <%= f.password_field :password_confirmation %>
        
        <%= f.submit "アカウント登録", class: "btn btn-primary" %>
    
    <% end %>
</div>

