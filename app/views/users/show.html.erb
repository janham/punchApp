<% provide(:title, @user.name) %>
<div class="main">
  <div class="container">
    <div class="user-show">
      <div class="user-show-top">
        <%= user_img(@user) %>
        <div class="user-show-name">
          <h1><%= @user.name %></h1>
        </div>
      </div>
      <div class="user-post">
        <% if @user.posts.any? %>
        <h3>posts (<%= @user.posts.count %>)</h3>
          <ol class="microposts">
            <%= render @posts %>
          </ol>
          <%= will_paginate @posts %>
        <% end %>
      </div>
      <div class="user-show-bottom">
        <%= render 'shared/punch_list' %>
      </div>
    </div>
  </div>
</div>